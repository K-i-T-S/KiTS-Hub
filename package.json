{
  "name": "kits-hub-v2.0",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "type-check": "tsc --noEmit",
    "build:analyze": "ANALYZE=true next build",
    "test:provisioning": "node test/run-tests.js",
    "test:watch": "node test/run-tests.js --watch",
    "health-check": "curl -f http://localhost:3000/api/health 2>/dev/null || echo 'Server not running - health check skipped'",
    "validate-env": "NODE_ENV=development node -e \"try { require('./lib/env-config').validateEnvironment().isValid || process.exit(1) } catch(e) { console.error('Environment validation failed:', e.message); process.exit(1) }\"",
    "pre-deploy": "npm run validate-env && npm run test:provisioning && npm run build && npm run health-check",
    "post-deploy": "npm run health-check && npm run type-check"
  },
